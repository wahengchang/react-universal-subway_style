{
  "name": "react-universal-subway",
  "version": "1.0.0",
  "description": "react redux unviersal subway-style boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && better-npm-run start",
    "build": "better-npm-run clean && better-npm-run build",
    "dev": "better-npm-run dev",
    "clean": "better-npm-run clean"
  },
  "betterScripts": {
    "dev": {
      "command": "babel-node ./src/server/index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start": {
      "command": "node ./src/server/index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "clean": {
      "command": "rimraf public webpack-assets.json"
    },
    "build": {
      "command": "webpack --progress --hide-modules --config ./webpack.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": "https://www.github.com/rahulbasu710",
  "keywords": [
    "react",
    "redux",
    "webpack",
    "babel",
    "universal",
    "router",
    "JWT",
    "auth0"
  ],
  "author": "Rahul Basu",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^7.1.4",
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "better-npm-run": "^0.1.0",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "express": "^4.16.1",
    "googleapis": "^22.2.0",
    "grommet": "^1.8.2",
    "helmet": "^3.8.2",
    "hpp": "^0.2.2",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "morgan": "^1.9.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-redux-form": "^1.14.2",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.3.0",
    "redux-saga": "^0.15.6",
    "serialize-javascript": "^1.4.0",
    "urldecode": "^1.0.1",
    "urlencode": "^1.1.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chunk-manifest-webpack-plugin": "^1.1.2",
    "css-loader": "^0.28.7",
    "css-modules-require-hook": "^4.2.2",
    "eslint": "^4.8.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "name-all-modules-plugin": "^1.0.1",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.6.0",
    "webpack-chunk-hash": "^0.4.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1"
  }
}
